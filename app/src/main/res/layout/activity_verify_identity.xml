<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.VerifyIdentity"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/verificationCodeMessageHolder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:text="@string/verification_code_message"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verificationCodeHolder" />

    <TextView
        tools:ignore="HardcodedText"
        android:id="@+id/verificationCodeHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  | d421 | 5e8a | 86d2 | 4c1e |\n  | 274a | 4f8f | 6b1b | 4815 |\n  | 0d4d | d259 | e080 | 8c4b |\n  | d516 | 45ba | 6005 | 120f |"
        app:fontFamily="monospace"
        app:layout_constraintBottom_toTopOf="@+id/verificationCodeMessageHolder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:textSize="18sp"/>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/verifyIdentityToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>