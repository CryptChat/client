<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.BackupsEntry">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/backupsViewToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/takeBackupButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/take_backup_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backupsViewFragHolder" />

    <FrameLayout
        android:id="@+id/backupsViewFragHolder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backupsViewToolbar" />

    <ProgressBar
        android:id="@+id/backupProgressBar"
        style="@android:style/Widget.Holo.ProgressBar.Large"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="4dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/backupStatusIndicator"
        app:layout_constraintEnd_toStartOf="@+id/backupStatusIndicator"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/takeBackupButton"
        app:layout_constraintTop_toTopOf="@+id/backupStatusIndicator" />

    <TextView
        android:id="@+id/backupStatusIndicator"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="4dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/takeBackupButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/backupProgressBar"
        app:layout_constraintTop_toBottomOf="@+id/takeBackupButton"
        tools:text="TextView" />

</androidx.constraintlayout.widget.ConstraintLayout>